<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:id="@+id/information"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="100dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/go_album"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="13dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_yard_24" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/UserOption"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_beenhere_24" />

                <TextView
                    android:id="@+id/myInfoNickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="닉네임"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/portfolioLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp" >

                <ImageButton
                    android:id="@+id/portfolioButton"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/ic_baseline_perm_media_24" />

                <TextView
                    android:id="@+id/portfolioText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="14dp"
                    android:gravity="center"
                    android:text="포트폴리오"
                    android:textSize="13dp"
                    android:textColor="@color/gray" />

            </LinearLayout>

            <TextView
                android:id="@+id/myInfoLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="            지역"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/myInfoMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="            한줄 메시지 (소개)"
                android:textColor="@color/black"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>



    <com.google.android.material.tabs.TabLayout
        android:id="@+id/myinfo_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/information"
        android:elevation="0dp"
        app:tabBackground="@drawable/myinfo_tab_background"
        app:tabSelectedTextColor="#ffffff"
        app:tabTextColor="#ffffff">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="게시물" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="댓글" />

    </com.google.android.material.tabs.TabLayout>


    <FrameLayout
        android:id="@+id/myinfo_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/myinfo_tabs"
        android:layout_alignParentBottom="true"
        app:layout_constraintTop_toBottomOf="@id/myinfo_tabs">
    </FrameLayout>

