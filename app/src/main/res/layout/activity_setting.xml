<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/basic_image"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/setting_email"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.5dp"
            android:layout_gravity="left"
            android:text="Email"
            android:textColor="#509664" />

        <EditText
            android:id="@+id/setting_email_text"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:hint="Email 들어가는 자리 (수정불가)"
            android:enabled="false"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:backgroundTint="@color/mainGreen" />

        <TextView
            android:id="@+id/setting_nickname"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3.5dp"
            android:layout_gravity="left"
            android:text="Nickname"
            android:textColor="#509664" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/setting_nickname_text"
                android:layout_width="245dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:textSize="18dp"
                android:hint="Enter Password"
                android:singleLine="true"
                android:inputType="textPassword"
                android:backgroundTint="@color/mainGreen" />

            <Button
                android:id="@+id/portfolioButton"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#FFFFFF"
                android:gravity="center"
                android:text="중복체크"
                android:textColor="#3CAF5C"
                android:textSize="10dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/setting_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3.5dp"
            android:layout_gravity="left"
            android:text="Location"
            android:textColor="#509664" />

        <TextView
            android:layout_width="335dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:background="#509664" />



    </LinearLayout>

</LinearLayout>