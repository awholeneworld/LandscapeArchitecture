<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/whitegray"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">

        <LinearLayout
            android:id="@+id/matching_item_image_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginHorizontal="10dp"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/comment_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_launcher_background" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:layout_toRightOf="@+id/matching_item_image_linearlayout"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/matching_request_item_pofol"
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:text="포트폴리오"
            android:textSize="13dp"
            android:background="@drawable/all_button_bg_ripple_round_15_whiteborder"
            android:layout_toLeftOf="@+id/matching_request_item_chat"
            android:layout_marginRight="10dp"/>


        <Button
            android:id="@+id/matching_request_item_chat"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:text="채팅"
            android:textSize="13dp"
            android:background="@drawable/all_button_bg_ripple_round_15_whiteborder"
            android:layout_toLeftOf="@+id/matching_request_item_accept"
            android:layout_marginRight="10dp"/>


        <Button
            android:id="@+id/matching_request_item_accept"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:text="매칭 수락"
            android:textSize="13dp"
            android:background="@drawable/all_button_bg_ripple_round_15_whiteborder"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"/>

    </RelativeLayout>

</LinearLayout>