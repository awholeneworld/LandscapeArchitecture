<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/post_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="75dp">

        <!--toolbar-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/writepost_toolbar_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게시물 작성"
                android:textColor="@color/mainGreen"
                android:textSize="20sp">

            </TextView>
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:id="@+id/ScrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/writepost_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <!--제목-->
                <EditText
                    android:id="@+id/writepost_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35dp"
                    android:background="@color/white"
                    android:hint="제목을 입력하세요"
                    android:textSize="20sp" />

                <!--선-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/whitegray" />

                <!--내용-->
                <EditText
                    android:id="@+id/writepost_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="35dp"
                    android:background="@null"
                    android:hint="내용을 입력하세요"
                    android:paddingBottom="5dp"
                    android:textSize="16sp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/whitegray" />

        <ImageButton
            android:id="@+id/writepost_imageAddButton"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/image_outline_upload" />

        <Button
            android:id="@+id/writepost_assign"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="7dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/all_button_bg_ripple_round_15"
            android:text="등록"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </FrameLayout>

</FrameLayout>