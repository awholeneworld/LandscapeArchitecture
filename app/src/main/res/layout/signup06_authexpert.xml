<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--toolbar-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/signup05_toolbar_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textColor="@color/mainGreen"
                android:textSize="20sp">
            </TextView>
        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="55dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signup05_text01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="전문가를 인증할 수 있는 \n사진을 보내주세요"
                android:textColor="@color/black"
                android:textSize="28sp" />


            <TextView
                android:id="@+id/signup05_text02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="joker@gachon.ac.kr으로\n방금 입력하신 이메일과\n전문가 인증 사진을 함께 보내주세요."
                android:textColor="@color/gray"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/signup05_text03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="운영측에서 확인 후, 이메일로 가입 확정 메일을 보내드립니다. 이 일은 1~2일이 소요될 수 있습니다."
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <!--                background : 버튼 누르면 물결 효과-->
            <Button
                android:id="@+id/signup06_button01"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background="@drawable/all_button_bg_ripple_round_15"
                android:text="완료"
                android:textColor="@color/white"
                android:textSize="15dp"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

