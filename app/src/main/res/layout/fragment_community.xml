<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:elevation="0dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/black"
        app:tabTextColor="@color/gray">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="자유" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="후기" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="조경 팁" />

    </com.google.android.material.tabs.TabLayout>

    <Button
        android:id="@+id/selectCommunityMode"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@+id/tabs"
        android:background="@drawable/ic_baseline_view_list_24"/>

    <!--
    <TextView
        android:id="@+id/toolbar_bottom_boarder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/whitegray"
        android:layout_alignTop="@+id/community_frame" />-->

    <FrameLayout
        android:id="@+id/community_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabs"
        android:layout_alignParentBottom="true"
        app:layout_constraintTop_toBottomOf="@id/tabs">
    </FrameLayout>

</RelativeLayout>
